USER=<%= @options[:user] %>
CURRENT_DIR=<%= ::File.join(@options[:home], 'current') %>

cd $CURRENT_DIR

exec 2>&1
CITRUS_IRC_CHANNEL=<%= @options[:channel] %> CITRUS_IRC_HOST=<%= @options[:host] %> PATH=<%= @options[:ruby_path] %>:$PATH exec chpst -u$USER bundle exec ruby -Ilib bin/citrus-irc
